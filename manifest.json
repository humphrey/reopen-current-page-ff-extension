{
  "manifest_version": 2,
  "name": "Reopen current page",
  "version": "1.0",
  "description": "Adds a GO button that Reopen current page instead of reloading it",
  "icons": {
    "48": "chevron-right-solid.svg",
    "96": "chevron-right-solid.svg"
  },

  "permissions": [
    "tabs"
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_icon": "chevron-right-solid.svg",
    "default_title": "Reopen current page"
  }

}